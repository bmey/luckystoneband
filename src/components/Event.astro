---
import dayjs from 'dayjs';
export interface Props {
    date: `${number}${number}${number}${number}-${number}${number}-${number}${number}`;
    facebookEventId: string;
    locationName: string;
}

const { date, facebookEventId, locationName } = Astro.props;
const formattedDate = dayjs(date).format("dddd, MMM D");
---

<a class="content" href={`https://www.facebook.com/events/${facebookEventId}/`}>
    <div class="header date">
        <div>{formattedDate}</div>
    </div>
    <div class="header">
        <i class="fa-solid fa-location-dot"></i>
        <div>{locationName}</div>
    </div>
    <div class="link">View more</div>
</div>

<style>
    .content {
        margin: 2rem 0;
        padding: 1rem 2rem;
        background-color: rgba(var(--color-primary-dark2-rgb), 0.4);
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
		transition: all 0.3s ease;
    }
    .content > :not(:last-child) {
        flex: 1;
    }
    @media only screen and (max-width: 800px) {
		.content {
			flex-direction: column;
            text-align: center;
		}

        .header {
            margin: 0 0 1rem;
        }

        .date {
            font-size: 1.75rem;
        }
	}
    .date {
        font-weight: bold;
        font-size: 1.5rem;
    }
    .header {
        display: flex;
        align-items: center;
    }
    .header i {
        margin-right: 0.5rem;
    }
    .link {
		background: transparent;
		border: 2px solid var(--primary);
        border-radius: 50px;
		color: var(--primary);
		cursor: pointer;
		padding: 0.5rem 1rem;
		text-decoration: none;
        text-transform: uppercase;
		transition: all 0.3s ease;
	}

    a:hover,
    a:focus {
        background-color: rgba(var(--color-primary-dark2-rgb), 0.55);
    }
	a:hover .link,
	a:focus .link {
        background: rgba(var(--color-primary-dark2-rgb), 0.9);
		border-color: var(--color-light);
		color: var(--color-light);
	}
</style>