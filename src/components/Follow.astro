---
import Section from "../layouts/Section.astro";
---

<Section id="Follow" title="Follow">
    <div class="content">
        <a class="buttonlink" href="https://www.facebook.com/luckystoneband">
            <i class="fa-brands fa-facebook"></i>
            <span>Facebook</span>
        </a>
        <a class="buttonlink" href="https://www.instagram.com/luckystoneband">
            <i class="fa-brands fa-instagram"></i>
            <span>Instagram</span>
        </a>
        <a class="buttonlink" href="https://www.threads.net/@luckystoneband">
            <i class="fa-brands fa-threads"></i>
            <span>Threads</span>
        </a>
    </div>
</Section>

<style>
    a {
        display: flex;
        align-items:center;
    }
    i {
        margin-right: 0.5rem;
    }
    .content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 1rem;
        flex-wrap: wrap;
    }
    .buttonlink {
		background: rgba(var(--primaryRGB), 0.5);
        border-radius: 50px;
		color: var(--color-light);
		cursor: pointer;
		font-size: 1.25rem;
		padding: 0.5rem 1rem;
        text-decoration: none;
		transition: all 0.3s ease;
	}

	.buttonlink:hover,
	.buttonlink:focus {
		color: var(--color-lighter);
		background: rgba(var(--primaryRGB), 0.9);
	}
</style>
